<Window x:Class="Labarotory.Forms.Main"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Labarotory.Forms"
        mc:Ignorable="d"
        Title="Main" Height="600" Width="1024" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="29*"/>
            <RowDefinition Height="53*"/>
            <RowDefinition Height="303*"/>
            <RowDefinition Height="34*"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="1" Orientation="Horizontal">
            <Image x:Name="imgRole" Width="50" Height="50" Stretch="Uniform"/>
            <TextBlock x:Name="tbFullName" />
            <TextBlock x:Name="tbRole"/>
        </StackPanel>
        <Grid x:Name="gridUserContext" Grid.Row="2" Grid.ColumnSpan="3"/>
        <TextBlock x:Name="timer" Text="2:10" />
        <Button Background="#FF349C3D" BorderBrush="#FF349C3D" Content="Exit" Grid.Column="2" HorizontalAlignment="Right" VerticalAlignment="Top" Click="clExit" Grid.RowSpan="2" Width="55"/>
    </Grid>
</Window>
